<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/period_holder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/start_time"
            style="@style/MonashApp.Text.Paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8:00 AM" />

        <TextView
            android:id="@+id/end_time"
            style="@style/MonashApp.Text.Paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10:00 AM" />
    </LinearLayout>

    <View
        android:id="@+id/vertical_seperator"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/period_holder"
        android:background="@color/seperator_blue" />


    <LinearLayout
        android:id="@+id/lecture_info_holder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/vertical_seperator"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/unit_name"
            style="@style/MonashApp.Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="FIT1031 Lecture 01" />

        <TextView
            android:id="@+id/lecturer_name"
            style="@style/MonashApp.Text.Paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Arun Kongaurthu" />

        <TextView
            android:id="@+id/campus_name"
            style="@style/MonashApp.Text.Paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="S4, 13 College Walk, Clayton" />
    </LinearLayout>

</RelativeLayout>